<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlToque" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/colorBlack</item>

        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>



        <!-- specify enter and exit transitions
        <item name="android:windowEnterTransition">@transition/ex</item>
        <item name="android:windowExitTransition">@transition/explode</item>-->

        <!-- specify shared element transitions
        <item name="android:windowSharedElementEnterTransition">
            @transition/transition</item>
        <item name="android:windowSharedElementExitTransition">
            @transition/transition</item>-->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AlToque.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AlToque.NoActionBar.Primary">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>
    </style>

    <style name="Theme.Toolbar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.TranslucentSystemBars" parent="Theme.AlToque.NoActionBar">

        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->

    </style>
    <style name="Theme.AlToque.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.AlToque.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="SplashTheme" parent="Theme.AlToque.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimary</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>


</resources>