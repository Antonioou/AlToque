<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_suggestionStoreHome"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_20"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:selectableItemBackground"
        android:visibility="visible"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/dp_20"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawingCacheQuality="auto"
                android:scaleType="centerCrop"
                android:src="@drawable/food_reference_img"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_Ã¬nfostore_sugg_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="@dimen/dp_10"
                app:cardElevation="5dp"
                app:contentPadding="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_namestore_sugg_rv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/latobold"
                        android:gravity="center_vertical"
                        android:text="Restaurant Lucero"
                        android:textColor="@color/colorBlackMatiz1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_directionstore_sugg_rv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/dp_5"
                        android:fontFamily="@font/latoregular"
                        android:gravity="center_vertical"
                        android:text="Avenida Los Cespedes"
                        android:textColor="@color/colorGrey"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginHorizontal="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:background="@color/colorGreyMatiz1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_starsstore_sugg_rv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/dp_5"
                            android:layout_weight="0.3"
                            android:drawableTint="@color/colorBlueMatiz1"
                            android:fontFamily="@font/latoregular"
                            android:gravity="center"
                            android:text="10-15 mins"
                            android:textColor="@color/colorGrey"
                            android:textSize="13sp"
                            app:drawableStartCompat="@drawable/ic_baseline_access_time_24" />

                        <TextView
                            android:id="@+id/tv_timestore_sugg_rv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/dp_5"
                            android:layout_weight="0.3"
                            android:drawableTint="@color/colorYellowMatiz1"
                            android:fontFamily="@font/latoregular"
                            android:gravity="center"
                            android:text="4.1 (10)"
                            android:textColor="@color/colorGrey"
                            android:textSize="13sp"
                            app:drawableStartCompat="@drawable/ic_baseline_star_outline_24" />

                        <TextView
                            android:id="@+id/tv_coststore_sugg_rv"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="@dimen/dp_5"
                            android:layout_weight="0.3"
                            android:drawableTint="#81C784"
                            android:fontFamily="@font/latoregular"
                            android:gravity="center"
                            android:text="3.00"
                            android:textColor="@color/colorGrey"
                            android:textSize="13sp"
                            app:drawableStartCompat="@drawable/ic_baseline_attach_money_24" />
                    </LinearLayout>
                </LinearLayout>


            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mc_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:selectableItemBackground"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardElevation="5dp"
        app:contentPadding="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fab_filterstore_home">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginBottom="@dimen/dp_10"
                android:scaleType="centerCrop"
                android:src="@drawable/food_reference_img"
                app:layout_constraintBottom_toBottomOf="@id/view_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView

                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:fontFamily="@font/latobold"
                android:gravity="center_vertical"
                android:text="Restaurant Lucero"
                android:textColor="@color/colorBlackMatiz1"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/tv1"
                app:layout_constraintEnd_toStartOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:fontFamily="@font/latoregular"
                android:gravity="center_vertical"
                android:text="Avenida Los Cespedes"
                android:textColor="@color/colorGrey"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                app:layout_constraintEnd_toStartOf="@id/imageView"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/view_divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@color/colorGreyMatiz1"
                app:layout_constraintTop_toBottomOf="@id/tv1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_divider">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:layout_weight="0.3"
                    android:drawableTint="@color/colorBlueMatiz1"
                    android:fontFamily="@font/latoregular"
                    android:gravity="center"
                    android:text="10-15 mins"
                    android:textColor="@color/colorGrey"
                    android:textSize="13sp"
                    app:drawableStartCompat="@drawable/ic_baseline_access_time_24" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:layout_weight="0.3"
                    android:drawableTint="@color/colorYellowMatiz1"
                    android:fontFamily="@font/latoregular"
                    android:gravity="center"
                    android:text="4.1 (10)"
                    android:textColor="@color/colorGrey"
                    android:textSize="13sp"
                    app:drawableStartCompat="@drawable/ic_baseline_star_outline_24" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:layout_weight="0.3"
                    android:drawableTint="#81C784"
                    android:fontFamily="@font/latoregular"
                    android:gravity="center"
                    android:text="3.00"
                    android:textColor="@color/colorGrey"
                    android:textSize="13sp"
                    app:drawableStartCompat="@drawable/ic_baseline_attach_money_24" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mc_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:selectableItemBackground"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardElevation="5dp"
        app:contentPadding="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mc_1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginBottom="@dimen/dp_10"
                android:scaleType="centerCrop"
                android:src="@drawable/second_image"
                app:layout_constraintBottom_toBottomOf="@id/view_divider1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView

                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:fontFamily="@font/latobold"
                android:gravity="center_vertical"
                android:text="Cevicheria Carlo"
                android:textColor="@color/colorBlackMatiz1"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/tv11"
                app:layout_constraintEnd_toStartOf="@+id/imageView1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:fontFamily="@font/latoregular"
                android:gravity="center_vertical"
                android:text="Avenida Los Punos"
                android:textColor="@color/colorGrey"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView1"
                app:layout_constraintEnd_toStartOf="@id/imageView1"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/view_divider1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@color/colorGreyMatiz1"
                app:layout_constraintTop_toBottomOf="@id/tv11" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_divider1">

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:layout_weight="0.3"
                    android:drawableTint="@color/colorBlueMatiz1"
                    android:fontFamily="@font/latoregular"
                    android:gravity="center"
                    android:text="5-10 mins"
                    android:textColor="@color/colorGrey"
                    android:textSize="13sp"
                    app:drawableStartCompat="@drawable/ic_baseline_access_time_24" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:layout_weight="0.3"
                    android:drawableTint="@color/colorYellowMatiz1"
                    android:fontFamily="@font/latoregular"
                    android:gravity="center"
                    android:text="3.9 (31)"
                    android:textColor="@color/colorGrey"
                    android:textSize="13sp"
                    app:drawableStartCompat="@drawable/ic_baseline_star_outline_24" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:layout_weight="0.3"
                    android:drawableTint="#81C784"
                    android:fontFamily="@font/latoregular"
                    android:gravity="center"
                    android:text="Gratis"
                    android:textColor="@color/colorGrey"
                    android:textSize="13sp"
                    app:drawableStartCompat="@drawable/ic_baseline_attach_money_24" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>
</LinearLayout>