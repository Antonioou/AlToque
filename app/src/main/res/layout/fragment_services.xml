<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.initial.ui.services.ServicesFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title_services"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:fontFamily="@font/ibm_semibold"
            android:text="Servicios"
            android:textColor="@color/colorBlackMatiz1"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/ll_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/title_services">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginVertical="@dimen/dp_15"

                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                android:visibility="visible"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="@dimen/dp_30"
                app:cardElevation="@dimen/dp_5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_services">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        android:src="@drawable/ic_baseline_star_outline_24"
                        app:backgroundTint="@color/colorGreyMatiz3"
                        app:fabSize="mini" />


                    <TextView
                        android:id="@+id/tv_namestore_sugg_rv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/productsansregular"
                        android:gravity="center"
                        android:text="Comida"
                        android:textColor="@color/colorGrey"
                        android:textSize="12sp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_search_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            android:visibility="visible"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="@dimen/dp_10"
            app:cardElevation="1dp"
            app:contentPadding="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_category">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/dp_20"
                android:fontFamily="@font/productsansregular"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:text="Buscar..."
                android:textColor="@color/colorGrey"

                android:textSize="17sp"
                app:drawableStartCompat="@drawable/ic_outline_search_24"
                app:drawableTint="@color/design_default_color_primary" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mc_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:selectableItemBackground"
            app:cardCornerRadius="@dimen/dp_10"
            app:cardElevation="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cv_search_service">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/dp_130"
                    android:layout_height="@dimen/dp_150"
                    android:elevation="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/food_reference_img"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/dp_5"

                    android:background="@drawable/shape_gradient_cardstore"
                    android:drawableTint="@color/colorYellowMatiz1"
                    android:elevation="50dp"
                    android:fontFamily="@font/sourcesansprosemibold"
                    android:gravity="center"
                    android:text="3.9 (31)"
                    android:textColor="@color/colorBlackMatiz1"
                    android:textSize="13sp"
                    android:padding="3dp"
                    android:layout_marginBottom="@dimen/dp_5"
                    app:drawableStartCompat="@drawable/ic_baseline_star_outline_24"
                    app:layout_constraintBottom_toBottomOf="@id/imageView"
                    app:layout_constraintEnd_toEndOf="@id/imageView"
                    app:layout_constraintStart_toStartOf="@id/imageView" />

                <TextView

                    android:id="@+id/textView1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_5"
                    android:fontFamily="@font/latobold"
                    android:gravity="center_vertical"
                    android:text="Parrilla Roast "
                    android:textColor="@color/colorBlackMatiz1"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toTopOf="@id/tv1"
                    app:layout_constraintEnd_toStartOf="@id/imageView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:fontFamily="@font/latoregular"
                    android:gravity="center_vertical"
                    android:text="Avenida Los Punos"
                    android:textColor="@color/colorGrey"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@id/tv2"
                    app:layout_constraintEnd_toStartOf="@+id/imageView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView1" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:fontFamily="@font/latoregular"
                    android:gravity="center_vertical"
                    android:text="Cevicheria"
                    android:textColor="@color/colorGrey"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@id/view_divider1"
                    app:layout_constraintEnd_toStartOf="@+id/imageView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv1" />

                <View
                    android:id="@+id/view_divider1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:background="@color/colorGreyMatiz1"
                    app:layout_constraintBottom_toTopOf="@id/ll_2"
                    app:layout_constraintTop_toBottomOf="@id/tv2" />

                <LinearLayout
                    android:id="@+id/ll_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_5"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/imageView"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/dp_5"
                        android:layout_weight="0.5"
                        android:drawableTint="@color/colorBlueMatiz1"
                        android:fontFamily="@font/latoregular"
                        android:gravity="center"
                        android:text="5-10 mins"
                        android:textColor="@color/colorGrey"
                        android:textSize="13sp"
                        app:drawableStartCompat="@drawable/ic_baseline_access_time_24" />


                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/dp_5"
                        android:layout_weight="0.5"
                        android:drawableTint="#81C784"
                        android:fontFamily="@font/latoregular"
                        android:gravity="center"
                        android:text="Gratis"
                        android:textColor="@color/colorGrey"
                        android:textSize="13sp"
                        app:drawableStartCompat="@drawable/ic_baseline_attach_money_24" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>