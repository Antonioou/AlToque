<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_suggestionStoreHome"
        android:layout_width="300dp"
        android:layout_height="230dp"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:foreground="?android:selectableItemBackground"
        android:visibility="visible"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/dp_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_banner_business_style_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawingCacheQuality="auto"
                android:scaleType="centerCrop"
                android:src="@drawable/food_reference_img"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/iv_logo_business_style_two"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:elevation="10dp"
                app:civ_border_width="2dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="@dimen/dp_15"
                android:src="@drawable/second_image"
                app:layout_constraintBottom_toTopOf="@id/mcv_fastdetail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_fastdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="@dimen/dp_20"
                app:cardElevation="7dp"
                app:contentPadding="3dp"
                android:elevation="@dimen/dp_0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name__business_style_two"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/dp_5"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="@font/latobold"
                        android:gravity="center"
                        android:text="-"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:autoSizeTextType="uniform"
                        android:textColor="@color/colorBlackMatiz1"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tv_direction_business_style_two"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/dp_5"
                        android:fontFamily="@font/latoregular"
                        android:gravity="center_vertical"
                        android:text="-"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/colorGrey"
                        android:textSize="14sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginHorizontal="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        android:background="@color/colorGreyMatiz1" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/view_divider"
                        app:layout_constraintStart_toStartOf="@+id/view_divider"
                        app:layout_constraintTop_toBottomOf="@id/view_divider">

                        <TextView
                            android:id="@+id/tv_time_business_style_two"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginHorizontal="@dimen/dp_5"
                            android:drawableTint="@color/colorBlueMatiz1"
                            android:fontFamily="@font/latoregular"
                            android:gravity="center"
                            android:minWidth="@dimen/dp_50"
                            android:text="-"
                            android:drawablePadding="@dimen/dp_10"
                            android:textColor="@color/colorGrey"
                            android:textSize="15sp"
                            app:drawableStartCompat="@drawable/ic_baseline_access_time_24"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/tv_rate_business_style_two"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_rate_business_style_two"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginHorizontal="@dimen/dp_5"
                            android:layout_toStartOf="@id/tv_cost__business_style_two"
                            android:layout_toEndOf="@id/tv_time_business_style_two"
                            android:drawableTint="@color/colorYellowMatiz1"
                            android:fontFamily="@font/latoregular"
                            android:gravity="center"
                            android:minWidth="@dimen/dp_50"
                            android:drawablePadding="@dimen/dp_10"
                            android:text="-"

                            android:textColor="@color/colorGrey"
                            android:textSize="15sp"
                            app:drawableStartCompat="@drawable/ic_baseline_star_outline_24"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/tv_cost__business_style_two"
                            app:layout_constraintStart_toEndOf="@id/tv_time_business_style_two"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_cost__business_style_two"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginHorizontal="@dimen/dp_5"
                            android:drawableTint="#81C784"
                            android:fontFamily="@font/latoregular"
                            android:gravity="center"
                            android:minWidth="@dimen/dp_50"
                            android:drawablePadding="@dimen/dp_10"
                            android:text="-"
                            android:textColor="@color/colorGrey"
                            android:textSize="15sp"
                            app:drawableStartCompat="@drawable/ic_baseline_attach_money_24"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/tv_rate_business_style_two"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>