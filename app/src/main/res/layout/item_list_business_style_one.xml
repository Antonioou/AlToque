<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:selectableItemBackground"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardElevation="5dp"
        app:contentPadding="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_photo_business_style_one"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginBottom="@dimen/dp_10"
                android:scaleType="centerCrop"
                android:src="@drawable/second_image"
                app:layout_constraintBottom_toBottomOf="@id/view_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name__business_style_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:fontFamily="@font/latobold"
                android:gravity="center_vertical"
                android:text="Cevicheria Carlo"
                android:textColor="@color/colorBlackMatiz1"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_direction__business_style_one"
                app:layout_constraintEnd_toStartOf="@+id/iv_photo_business_style_one"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_direction__business_style_one"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:fontFamily="@font/latoregular"
                android:gravity="center_vertical"
                android:text="Avenida Los Punos"
                android:textColor="@color/colorGrey"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_photo_business_style_one"
                app:layout_constraintEnd_toStartOf="@id/iv_photo_business_style_one"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:id="@+id/view_divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@color/colorGreyMatiz1"
                app:layout_constraintTop_toBottomOf="@id/tv_direction__business_style_one" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_25"
                android:layout_margin="@dimen/dp_5"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_divider">

                <TextView
                    android:id="@+id/tv_time_business_style_one"
                    android:layout_width="wrap_content"
                    android:minWidth="@dimen/dp_100"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:drawableTint="@color/colorBlueMatiz1"
                    android:fontFamily="@font/latoregular"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/colorGrey"
                    android:textSize="13sp"
                    app:drawableStartCompat="@drawable/ic_baseline_access_time_24" />

                <TextView
                    android:id="@+id/tv_rate_business_style_one"
                    android:layout_width="wrap_content"
                    android:minWidth="@dimen/dp_100"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:layout_toStartOf="@id/tv_cost__business_style_one"
                    android:layout_toEndOf="@id/tv_time_business_style_one"
                    android:drawableTint="@color/colorYellowMatiz1"
                    android:fontFamily="@font/latoregular"
                    android:gravity="center"
                    android:text="-"
                    android:textColor="@color/colorGrey"
                    android:textSize="13sp"
                    app:drawableStartCompat="@drawable/ic_baseline_star_outline_24" />

                <TextView
                    android:id="@+id/tv_cost__business_style_one"
                    android:layout_width="wrap_content"
                    android:minWidth="@dimen/dp_100"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:drawableTint="#81C784"
                    android:fontFamily="@font/latoregular"
                    android:gravity="center"
                    android:text="5.00"
                    android:textColor="@color/colorGrey"
                    android:textSize="13sp"
                    app:drawableStartCompat="@drawable/ic_baseline_attach_money_24" />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>