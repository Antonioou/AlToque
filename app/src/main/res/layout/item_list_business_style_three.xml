<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mc_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="@dimen/dp_15"
        app:cardCornerRadius="@dimen/dp_10"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_photo_business_style_three"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_150"
                android:elevation="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/food_reference_img"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_rate_business_style_three"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:background="@drawable/shape_gradient_cardstore"
                android:drawableTint="@color/colorYellowMatiz1"
                android:elevation="50dp"
                android:fontFamily="@font/sourcesansprosemibold"
                android:gravity="center"
                android:padding="3dp"
                android:text="-"
                android:textColor="@color/colorBlackMatiz1"
                android:textSize="13sp"
                app:drawableStartCompat="@drawable/ic_baseline_star_outline_24"
                app:layout_constraintBottom_toBottomOf="@id/iv_photo_business_style_three"
                app:layout_constraintEnd_toEndOf="@id/iv_photo_business_style_three"
                app:layout_constraintStart_toStartOf="@id/iv_photo_business_style_three" />

            <TextView
                android:id="@+id/tv_name__business_style_three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:fontFamily="@font/latobold"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="-"
                android:textColor="@color/colorBlackMatiz1"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@id/tv_direction_business_style_three"
                app:layout_constraintEnd_toStartOf="@id/iv_photo_business_style_three"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_direction_business_style_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                android:fontFamily="@font/latoregular"
                android:gravity="center_vertical"
                android:text="-"
                android:textColor="@color/colorGrey"
                android:textSize="15sp"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintBottom_toTopOf="@id/tv_type_business_style_three"
                app:layout_constraintEnd_toStartOf="@+id/iv_photo_business_style_three"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_name__business_style_three" />

            <TextView
                android:id="@+id/tv_type_business_style_three"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                android:fontFamily="@font/latoregular"
                android:gravity="center_vertical"
                android:text="-"
                android:textColor="@color/colorGrey"
                android:textSize="14sp"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintBottom_toTopOf="@id/view_divider1"
                app:layout_constraintEnd_toStartOf="@+id/iv_photo_business_style_three"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_direction_business_style_three" />

            <View
                android:id="@+id/view_divider1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginHorizontal="@dimen/dp_5"

                android:layout_marginBottom="@dimen/dp_5"
                android:background="@color/colorGreyMatiz1"
                app:layout_constraintBottom_toTopOf="@id/cl_1"
                app:layout_constraintTop_toBottomOf="@id/tv_type_business_style_three" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_photo_business_style_three"
                app:layout_constraintStart_toStartOf="@+id/view_divider1"
                app:layout_constraintTop_toBottomOf="@id/view_divider1">

                <TextView
                    android:id="@+id/tv_time_business_style_three"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableTint="@color/colorBlueMatiz1"
                    android:fontFamily="@font/latoregular"
                    android:gravity="center"
                    android:minWidth="@dimen/dp_50"
                    android:text="-"
                    android:textColor="@color/colorGrey"
                    android:textSize="15sp"
                    app:drawableStartCompat="@drawable/ic_baseline_access_time_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tv_cost_business_style_three"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_cost_business_style_three"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableTint="#81C784"
                    android:fontFamily="@font/latoregular"
                    android:gravity="center"
                    android:minWidth="@dimen/dp_50"
                    android:text="-"
                    android:textColor="@color/colorGrey"
                    android:textSize="15sp"
                    app:drawableStartCompat="@drawable/ic_baseline_attach_money_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tv_time_business_style_three"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>